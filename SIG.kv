#:kivy 2.0.0

<UserInputScreen>:

    asset_input: asset_input

    FloatLayout:
        pos: 0, 0
        size: root.width , root.height
        background_color: 1, 0, 0, .5

        GridLayout:
            cols: 1
            rows: 6
            padding: 10
            spacing: 10

            pos_hint: {'x': .3 , 'y': .3}
            size_hint: None, None
            size: root.width * .4, root.height * .6
            background_color: 1, 0, 0, 1
            
            Label:
                text: "Welcome to the SIG Application"
                font_size: 48

            Label:
                text: "Enter in the asset's ticker symbol"
            
            TextInput:
                text: "Ticker symbol here.. "
                multiline: False
                id: asset_input
                font_size: 32


            ToggleButton:
                text: "Date Picker"
                font_size: 32
            
            Button:
                text: 'Calculate'
                font_size: 32
                on_press: root.Extract_Input_Data()

            Button:
                text: 'TEST PRPGRAM'
                font_size: 32
                on_press: root.Basic_Test()
